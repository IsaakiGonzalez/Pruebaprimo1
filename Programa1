bool EsPrimo(int num){
  int contador=0;
  if (num%2==0){//comprueba si num es par
    return false;
  }
  else{
    for(int i=1;i<=num;i++){//comprueba los numeros que son divisibles desde el 1 hasta el mismo
      if (num%i==0){
        contador++;
      }
    }
    if (contador == 2){
      return true;
    }
    else{
      return false;
    }
  }
}
